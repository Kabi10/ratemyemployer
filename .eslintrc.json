{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "no-undef": "error",
    "no-console": "off"
  },
  "globals": {
    "React": "readable",
    "JSX": "readable",
    "NodeJS": "readable",
    "HTMLInputElement": "readable",
    "window": "readable",
    "process": "readable"
  },
  "env": {
    "browser": true,
    "node": true
  }
} 